{
  "manifest_version": 2,
  "name": "Zipwhip Plugin Bootstrapper",
  "description": "Javascript bootstrap framework for Zipwhip Plugins",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://app.zipwhip.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Zipwhip Plugin Store",    
    "default_icon": {
      "128": "images/icon.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
}